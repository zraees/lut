@page
@model GlobalShopping.Pages.UserAccount.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p class="h1 text-center">User list</p>

<br />

<p>
    <a class="btn btn-outline-primary" asp-page="Create">Create New</a>
</p>

<div class="container border rounded-3 table-responsive" style="height:600px">

    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.UserAccount[0].FirstName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.UserAccount[0].LastName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.UserAccount[0].DateOfBirth)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserAccount)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>