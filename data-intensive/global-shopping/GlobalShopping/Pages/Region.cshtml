@page
@model GlobalShopping.Pages.RegionModel
@{
    ViewData["Title"] = "Change Region";
}
<p class="h1 text-center">Change region</p>

<br />

<div class="container border rounded-3">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label class="control-label">Region</label>
                    <select asp-for="Region.ID" class="form-control form-select form-select-lg" asp-items="ViewBag.Regions"></select>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
