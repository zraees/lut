@page
@model GlobalShopping.Pages.Shopping.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<p class="h1 text-center">Delete product</p>

<br />

<p>
    <a class="btn btn-outline-primary" asp-page="Index">< Product list</a>
</p>

<div class="container border rounded-3">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" disabled />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Category" class="control-label"></label>
                <select asp-for="Product.Category" class="form-control form-select form-select-lg" asp-items="ViewBag.ProductCategory" disabled></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" disabled />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.ManufactureDate" class="control-label"></label>
                <input asp-for="Product.ManufactureDate" class="form-control" disabled />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.StockQuantity" class="control-label"></label>
                <input asp-for="Product.StockQuantity" class="form-control" disabled />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Active" class="control-label"></label>
                <input asp-for="Product.Active" class="form-check-input" type="checkbox" disabled />
            </div>
            @if (Model.Product.Image != null)
            {
                <div id="preview">
                    @{
                        var base64 = Convert.ToBase64String(Model.Product.Image);
                        var Image = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <img src="@Image" alt="" class="img-fluid">
                </div>
            }
            <form method="post">
                <input type="hidden" asp-for="Product.ID" />
                <input type="submit" value="Delete" class="btn btn-danger mb-3" />
            </form>
        </div>
    </div>
</div>