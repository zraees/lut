@page
@model GlobalShopping.Pages.Person.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<p class="h1 text-center">Delete person</p>

<br />

<p>
    <a class="btn btn-outline-primary" asp-page="Index">< Person list</a>
</p>
<div class="container border rounded-3">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="Person.FirstName" class="control-label"></label>
                <input asp-for="Person.FirstName" class="form-control" disabled />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Person.LastName" class="control-label"></label>
                <input asp-for="Person.LastName" class="form-control" disabled />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Person.DateOfBirth" class="control-label"></label>
                <input asp-for="Person.DateOfBirth" class="form-control" disabled />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Person.Active" class="control-label"></label>
                <input asp-for="Person.Active" class="form-check-input" type="checkbox" disabled />
            </div>
            <form method="post">
                <input type="hidden" asp-for="Person.ID" />
                <input type="submit" value="Delete" class="btn btn-danger mb-3" />
            </form>
        </div>
    </div>
</div>
