@page
@model GlobalShopping.Pages.AdminViewModel
@{
    ViewData["Title"] = "Admin View";
}
<p class="h1 text-center">Admin view</p>

<br />

<p class="h3">Product List</p>

<div class="container border rounded-3">

    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Product[0].Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Product[0].Price)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Product[0].ManufactureDate)
                </th>
            </tr>
        </thead>
        <tbody class="">
            @foreach (var item in Model.Product)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ManufactureDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<br />

<p class="h3">Person List</p>

<div class="container border rounded-3">

    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Person[0].FirstName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Person[0].LastName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Person[0].DateOfBirth)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Person)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>