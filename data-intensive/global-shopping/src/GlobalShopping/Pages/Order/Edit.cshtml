@page
@model GlobalShopping.Pages.Order.EditModel

@{
    ViewData["Title"] = "Edit";
}

<p class="h1 text-center">Edit order</p>

<br />

<p>
    <a class="btn btn-outline-primary" asp-page="Index">< Order list</a>
</p>

<div class="container border rounded-3">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Order.ID" />
                <div class="form-group mb-3">
                    <label asp-for="Order.OrderDate" class="control-label"></label>
                    <input asp-for="Order.OrderDate" class="form-control" />
                    <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Order.UserID" class="control-label"></label>
                    <select asp-for="Order.UserID" class="form-control form-select form-select-lg" asp-items="ViewBag.PersonID"></select>
                    <span asp-validation-for="Order.UserID" class="text-danger"></span>
                </div>
                <div class="form-group  mb-3">
                    <label asp-for="Order.DeliveryAddress" class="control-label"></label>
                    <textarea asp-for="Order.DeliveryAddress" class="form-control"></textarea>
                    <span asp-validation-for="Order.DeliveryAddress" class="text-danger"></span>
                </div>
                <div class="form-group  mb-3">
                    <label asp-for="Order.OrderValue" class="control-label"></label>
                    <input asp-for="Order.OrderValue" class="form-control" disabled/>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

<p class="h1 text-center">Order Line</p>

<br />

<div class="container border rounded-3">
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Order.Lines.First().ProductID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.Lines.First().Quantity)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order.Lines)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
